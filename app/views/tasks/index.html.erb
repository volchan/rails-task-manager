<h1>Task list :</h1>

<ul>
  <% @tasks.each do |task| %>
  <% done = task.done ? '[X]' : '[ ]' %>
  <li><%= link_to task.description, task_path(task.id) %> -
    <%= link_to done, task_path(task, task: {done: true}), method: :patch %>
  </li>
  <% end %>
</ul>

<%= link_to 'Create a new task', new_task_path %>
